---
interface Props {
    isOnline: boolean;
}

const { isOnline } = Astro.props
---

{isOnline ?
<div class="flex flex-row items-center justify-center rounded-md border border-green-400 bg-green-200">
    <span class="flex w-2 h-2 mx-1 bg-green-400 rounded-full"></span>
    <span class="text-green-400">Online</span>
</div>
:
<div class="flex flex-row items-center justify-center rounded-md border border-red-400 bg-red-200">
    <span class="flex w-2 h-2 mr-1 bg-red-400 rounded-full"></span>
    <span class="text-red-400">Offline</span>
</div>
}